<h1>Show all Bookmarks</h1>

<table>
  <th></th>
    <tr>
      <th>URL</th>
      <td class= columnRightSpace></td>
      <th>Site Name</th>
      <td class= columnRightSpace></td>
      <th>Date Saved</th>
    </tr>
    <th></th>
    <% bookmarks = Bookmark.all %>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.url %></td>
        <td class= columnRightSpace></td>
        <td><%= bookmark.site_name %></td>
        <td class= columnRightSpace></td>
        <td><%= bookmark.date_saved %></td>
        <td><!-- %= link_to 'Show', bookmark % --></td>
        <td><!-- %= link_to 'Edit', edit_bookmark_path(bookmark) % --></td>
        <td><!-- %= link_to 'Destroy', bookmark, :confirm => 'Are you sure?', :method => :delete % --></td>
        
      </tr>
    <% end %>
    
    <% if bookmarks.size == 0 %>
        <tr><em>No Bookmarks found </em></tr>
    <% end %>
</table>